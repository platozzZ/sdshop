				uni.navigateTo({
					url: url,
				})
			},

			_cancelSq() {
				this.shouquanButton = true;
			},
			_navigateTo1(url) {
				let me = this;
				if (this.isClick == false) {
					this.isClick = true;
					me.$refs.lktAuthorizeComp.handleAfterAuth(me, '../login/login?landing_code=1', function() {
						uni.navigateTo({
							url: url,
						})
					});
					setTimeout(function() {
						me.isClick = false;
					}, 2000);
				}
			},
			_order(status) {
				let me = this;
				me.$refs.lktAuthorizeComp.handleAfterAuth(me, '../login/login?landing_code=1', function() {
					me.status(status)
					uni.navigateTo({
						url: '../order/myOrder'
					});
				});
			},
			_axios() {
				var me = this
				var data = {
					access_id: me.access_id ? me.access_id : uni.getStorageSync("access_id"),
					module: 'app',
					action: 'user',
					app: 'index'
				}
				uni.request({
					data,
					url: uni.getStorageSync("url"),
					header: {
						'content-type': 'application/x-www-form-urlencoded'
					},
					method: 'POST',
					success: function(res) {
						console.log("!@!@!@!@!@!@!");
						console.log(res);
						me.coupon=res.data.plugin.coupon
						me.sign=res.data.plugin.sign
						me.mch=res.data.plugin.mch
						if (res.data.code == 404) {
							me.access_id1 = false
							me.grade = '普通会员'
							me.JP = res.data.plugin.JP
							me.FX = res.data.plugin.FX
							me.JF = res.data.plugin.JF
							me.MS = res.data.plugin.MS
							me.KJ = res.data.plugin.KJ
							me.PT = res.data.plugin.PT
							// #ifdef MP
							me.QB = res.data.plugin.QB
							// #endif
							
							// #ifdef MP
							// me.$refs.lktAuthorizeComp.handleAfterAuth(me, '../login/login?landing_code=1', me._axios);
							// #endif
						} else if (res.data.code == 200) {
							let {
								data: {
									data: {
										user,
										dfh_num,
										logo,
										company,
										dfk_num,
										dpj_num,
										dsh_num,
										th,
										grade,
										grade_end,
										imgurl_my,
										imgurl_s,
										font_color,
										date_color,
										have_grade,
										remind,
										rate,
									},
									plugin
								}
							} = res
							me.user = user
							me.th_num = th
							me.dfk_num = dfk_num
							me.dfh_num = dfh_num
							me.dsh_num = dsh_num
							me.dpj_num = dpj_num
							me.logoUrl = logo
							me.company = company
							me.logo1 = user.headimgurl
							me.$store.state.user_phone = user.mobile
							uni.setStorage({
								key: 'user_phone',
								data: user.mobile
							})
							me.access_id1 = true
							me.grade = grade
							me.grade_end = grade_end
							me.imgurl_my = imgurl_my
							me.imgurl_s = imgurl_s
							me.font_color = font_color
							me.date_color = date_color
							me.have_grade = have_grade
							me.rate = rate
							me.vip_modal_flag = remind ? true : false
							if (me.vip_modal_flag) {
								uni.hideTabBar()
							} else {
								uni.showTabBar()
							}
							me.JP = plugin.JP
							me.FX = plugin.FX
							me.JF = plugin.JF
							me.MS = plugin.MS
							me.KJ = plugin.KJ
							me.PT = plugin.PT
							// #ifdef MP
							me.QB = plugin.QB
							// #endif
						}
					},
					error: function(err) {
						console.log(err)
					}
				})
			},
			// 进入vip支付页面
			toVip(flag) {
				uni.setStorageSync('edit_flag', flag)
				uni.setStorageSync('edit_grade', this.grade)
				this._navigateTo('../../pagesA/vip/vip')
			},
			...mapMutations({
				status: 'SET_STATUS',
			})
		}
	}
</script>

