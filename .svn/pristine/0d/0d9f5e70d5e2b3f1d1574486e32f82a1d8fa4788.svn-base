						data: {
							data: {
								banner,
								list1,
								list2,
								list3,
								logo,
								plugin_arr,
								list_jf
							}
						}
					} = res
					me.banner = banner
					me.goods_centre = list2
					me.goods_like = list3
					me.logo = logo
					me.centre_list = me.goods_centre[me.title_index].list;
					me.list_jf = list_jf
					
					let plas = [];
					for(var x in plugin_arr){
						plas[x] = plugin_arr[x];
						plas[x]['appimg'] = me.getAppPluginImg(plugin_arr[x]['appimg']); 
					}
					console.log("plugin_arr: " + JSON.stringify(plas));
					me.plugin_arr = plas;
					
				}
				uni.request({
					data,
					url: uni.getStorageSync("url"),
					xhrFields: {
						withCredentials: true
					},
					header: {
						'content-type': 'application/x-www-form-urlencoded'
					},
					method: 'POST',
					success: (res) => {
						let {
							data: {
								data: {
									banner,
									list2,
									list3,
									logo,
									plugin_arr,
									xxnum,
									list_jf
								}
							}
						} = res
						me.banner = banner
						me.goods_centre = list2
						me.goods_like = list3
						me.list_jf = list_jf
						me.logo = logo
						me.centre_list = me.goods_centre[me.title_index].list
						me.plugin_arr = plugin_arr
						me.xxnum = xxnum>99 ? '99+' : xxnum //限制消息数超过99时显示99+
						me.page = 1;
						let plas = [];
						for(var x in plugin_arr){
							plas[x] = plugin_arr[x];
							plas[x]['appimg'] = me.getAppPluginImg(plugin_arr[x]['appimg']); 
						}
						me.plugin_arr = plas;
					}
				})

			},
			//添加tabbar购物车小点提醒
			showCartNumInfo() {
				if (this._cart_num) {
					var cart_num_str = String(this._cart_num)
					uni.setTabBarBadge({
						index: 2,
						text: cart_num_str
					})
				} else {
					uni.removeTabBarBadge({
						index: 2
					})
				}
			},
			...mapMutations({
				pro_id: 'SET_PRO_ID',
				arr_home: 'SET_ARR_HOME',
				data_height: 'SET_DATA_HEIGHT',
			}),

			_navigateTo(url) {
				var me = this
				if (me.isClick === false) {
					me.isClick = true;
					me.$refs.lktAuthorizeComp.handleAfterAuth(me, '../login/login?landing_code=1', function() {
						uni.navigateTo({
							url: url
						});
					});
					setTimeout(function() {
						me.isClick = false;
					}, 800);
				}
			},
			// 登录超时的timeout
			timeout() {
				uni.showToast({
					title: '账号登录超时,请重新登录！',
					icon: 'none',
					duration: 1500
				});
				setTimeout(function() {
					uni.navigateTo({
						url: '../login/login?landing_code=1',
					})
				}, 1500)
			},
			_navigateTo1(url) {
				uni.scanCode({
					success: function(res) {
						console.log('条码类型：' + res.scanType);
						console.log('条码内容：' + res.result);
					},
					error: function(err) {
						console.log(err)
					}
				});
				this.page = 1
				this.loadingType = 0;
			}
		},
		components: {
			uniLoadMore,
			wxParse,
			lktauthorize,
		}
	}
