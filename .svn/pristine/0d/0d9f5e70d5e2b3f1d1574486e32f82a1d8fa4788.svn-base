			var me = this;
			// 有分享的属性
			if (option.isfx == true || option.isfx == 'true') {
				if (option.pages == 'goodsDetailed') {
					if (option.fatherId != '' || option.fatherId) {
						uni.navigateTo({
							url: '../../pages/goods/goodsDetailed?productId=' + option.productId + '&isfx=true&fatherId=' + option.fatherId
