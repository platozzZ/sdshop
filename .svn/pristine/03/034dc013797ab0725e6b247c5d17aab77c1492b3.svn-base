.head,
.order_header {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.rigth_jiantou {
	margin-left: 28rpx;
}

.head {
	height: 88upx;
	padding: 0 30upx;
	border-bottom: 1px solid #eee;
	font-size: 40upx;
	color: #242424;
}

.head_img {
	width: 24upx;
	height: 36upx;
}

.head_search {
	width: 40upx;
	height: 40upx;
	visibility: hidden;
}

.order_header {
	justify-content: space-around;
	width: 100%;
	border-bottom: 1px solid #D2D2D2;
}

.header_li {
	width: 25%;
	text-align: center;
	height: 84upx;
	line-height: 84upx;
	border-bottom: 1px solid #eee;
	font-size: 30upx;
	color: #9D9D9D;
}

.header_border {
	color: #020202;
	font-weight: bold;
	position: relative;
}

.header_border:after {
	border-bottom: 5upx solid #020202;
	position: absolute;
	bottom: 0;
	width: 50%;
	content: "";
	left: 25%;
}

.last_right>div {
	justify-content: center;
}

.position_head {
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	background-color: #fff;
	z-index: 35;
}

uni-view {
	font-size: 26upx;
}

.content {
	margin-top: 88upx;
}

.item {
	font-size: 28upx;
	font-family: PingFang-SC-Medium;
	font-weight: 500;
	color: rgba(2, 2, 2, 1);
	display: flex;
	justify-content: space-between;
	padding: 20upx 0upx;
	margin: 0upx 20upx;

}

.one {
	border-bottom: 2upx solid rgb(238, 238, 238);
}

.em {
	float: left;
}

.my_header {
	width: 50upx;
	height: 50upx;
	border-radius: 50%;
	float: left;
}

.my_name {
	margin-left: 10upx;
	float: left;
	margin-top: 10upx;
}

.my_grade {
	margin-top: 10upx;
}

.my_num {
	float: left;
	margin-top: 10upx;
}

.rigth_jiantou {
	width: 27upx;
	height: 15upx;
	float: left;
	margin-top: 22upx;
}

.inner_item {
	font-size: 26upx;
	font-family: PingFang-SC-Medium;
	font-weight: 500;
	color: rgba(136, 136, 136, 1);
	display: flex;
	justify-content: space-between;
	margin: 24upx 70upx 24upx 50upx;
}

.xj {
	width: 245upx;
}

.xjj {
	width: 195upx;
}

.mz {
	width: 100upx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.mzz {
	width: 127upx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

