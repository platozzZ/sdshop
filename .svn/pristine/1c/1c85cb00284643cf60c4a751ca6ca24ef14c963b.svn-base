.head,
.order_header {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.head {
	height: 88upx;
	padding: 0 30upx;
	border-bottom: 1px solid #eee;
	font-size: 40upx;
	color: #242424;
}

.head_img {
	width: 24upx;
	height: 36upx;
}

.head_search {
	width: 40upx;
	height: 40upx;
	visibility: hidden;
}

.order_header {
	justify-content: space-around;
	width: 100%;
}

.header_li {
	text-align: center;
	height: 66upx;
	line-height: 76upx;
	font-size: 30upx;
	color: #9D9D9D;
}

.header_border {
	color: #020202;
	font-weight: bold;
	position: relative;
}

.header_border:after {
	border-bottom: 5upx solid #020202;
	position: absolute;
	bottom: 0;
	width: 50%;
	content: "";
	left: 25%;
}

.last_right>div {
	justify-content: center;
}

.position_head {
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	background-color: #fff;
	z-index: 35;
}

.content {}

.order_header {
	display: flex;
	justify-content: space-around;
	align-items: center;
	background: rgb(246, 246, 246);
	padding-bottom: 20upx;
	padding-top: 4upx;
}

.header_border {
	color: #020202;
	font-weight: bold;
}

/* 遮罩层规格样式 */
.allgoods_name {
	font-size: 32upx;
}

.mask {
	height: 100vh;
	width: 100%;
	background-color: rgba(000, 000, 000, 0.5);
	position: fixed;
	top: 0;
	left: 0;
	z-index: 32;
}

.cha {
	width: 32upx;
	height: 32upx;
	position: absolute;
	top: 0;
	right: 0;
}

.back {
	background-color: #fff;
}

.orange {
	background-color: #020202;
	color: #fff
}

.select {
	background-color: #eee;
}

.mask_num {
	display: flex;
	-webkit-box-pack: justify;
	-ms-flex-pack: justify;
	justify-content: space-between;
	-webkit-box-align: center;
	-ms-flex-align: center;
	align-items: center;
}

.allgoods_li {
	width: 370upx;
	padding: 39px 10px 10upx 15px !important;
	/* height: 420upx !important; */
	border: none;
	background: #fff;
}

.allgoods_li:nth-of-type(2n) {
	margin-bottom: 10upx;
	border-right: none;
	border-left: none;
}

.allgoods_li:nth-of-type(2n+1) {
	margin-right: 10upx;
	margin-bottom: 10upx;
	border-left: none;
}

.allgoods_p {
	font-size: 24upx;
	color: #999999;
	margin: 8upx 0 20upx 0;
	height: 32upx;
}

.allgoods_name {
	font-size: 28upx;
	color: #020202;
}

.allgoods>li>img {
	margin-bottom: 20upx;
}

uni-page-body {
	height: 100%;
	background: rgba(246, 246, 246, 1);
}

